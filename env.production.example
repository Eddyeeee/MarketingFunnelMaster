# ========================================
# SECURITY & PERFORMANCE
# ========================================

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
SESSION_SECRET=your-super-secret-session-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# ========================================
# MONITORING & LOGGING
# ========================================

# Sentry (Error Tracking)
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX@XXXXXXXXXX.ingest.sentry.io/XXXXXXXXXX

# Log Level
LOG_LEVEL=info

# ========================================
# CDN & ASSETS
# ========================================

# CDN Base URL
CDN_BASE_URL=https://cdn.yourdomain.com

# Asset Versioning
ASSET_VERSION=v1.0.0

# ========================================
# DEPLOYMENT
# ========================================

# Build Configuration
BUILD_TARGET=production
ENABLE_SOURCE_MAPS=false
ENABLE_ANALYTICS=true

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# ========================================
# BACKUP & RECOVERY
# ========================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTIFICATIONS
# ========================================

# Slack Webhook (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXXXXXX/XXXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Email Notifications
ADMIN_EMAIL=admin@yourdomain.com
ERROR_NOTIFICATION_EMAIL=errors@yourdomain.com

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable Features
ENABLE_UPSELL=true
ENABLE_A_B_TESTING=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_PAYMENT_PROCESSING=true

# ========================================
# CUSTOMIZATION
# ========================================

# Brand Colors (CSS Variables)
BRAND_PRIMARY=#2563eb
BRAND_SECONDARY=#7c3aed
BRAND_ACCENT=#059669

# Custom Domain
CUSTOM_DOMAIN=yourdomain.com
SSL_ENABLED=true

# ========================================
# DEVELOPMENT OVERRIDES
# ========================================

# Override for Development (set to false in production)
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false
SHOW_ERROR_DETAILS=false 